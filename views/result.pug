extends layout

block content


  .card.gy-4.gx-lg-2.m-4
    .card-header

      ul.nav.nav-tabs.card-header-tabs(data-bs-tabs='tabs')
        li.nav-item
          a.nav-link.active(aria-current='true' data-bs-toggle='tab' href='#result') Ergebnis
        li.nav-item
          a.nav-link(data-bs-toggle='tab' href='#bearbeiten') Trainingsdaten bearbeiten                     

    form.card-body.tab-content

          #bearbeiten.tab-pane
            
            .row.gy-4.gx-lg-2.justify-content-md-center.mt-2 
              .col-lg-8.col-xs-12.mb-3
                .card.shadow.p-4.h-100
                  #map
              .col-lg-4.col-xs-12.mb-3
                
                .card.shadow.p-4(style='height: 300px;')
                  .row.gy-4.gx-lg-2.mt-2
                    .col-lg-6.col-md-12.mb-3
                      form(method='post' action='result')
                       a.btn.btn-primary.my-2(type='submit') Skript ausführen
                    .col-lg-6.col-md-12.mb-3
                      form(method='post' action='result')
                       a.btn.btn-primary.my-2(onclick='geojsonExport()') Export Data
                  .row.gy-4.gx-lg-2.mt-2
                    .col-lg-6.col-md-12.mb-3
                      form(action="result/trainingsdaten" method="post")
                       a.btn.btn-primary.my-2(type="submit") bearbeiten
                  .row.gy-4.gx-lg-2.mt-2
                   table#tabelle.table.table-dark.table-striped.table-hover
                      tr
                        th Label
                        th Class_ID
                            
             
          
       
    #result.tab-pane.active
        .row.gy-4.gx-lg-2.justify-content-md-center.mt-2 
          .col-lg-8.col-xs-12.mb-3
            .card.shadow.p-4.h-100
              h3 Visualisierung von Klassifikation und AOA
                .leaflet-container.mt-3#map2
          .col-lg-4.col-xs-12.mb-3
            .card.shadow.p-4.h-100
              h3 Download
              | Wähle Dateien zum herunterladen aus:
              .form-check.mt-3(action="#" id="download_form")
                input#klassificatoin.form-check-input(type='checkbox' data-url="http://localhost:3000/prediction.tif" value='')
                label.form-check-label(for='flexCheckDefault')
                  | Klassifikation
                .form-check
                input#aoa.form-check-input(type='checkbox' data-url="http://localhost:3000/AOA_klassifikation.tif" value='')
                label.form-check-label(for='flexCheckChecked')
                  | Area of Applicability
                .form-check
                input#polygone.form-check-input(type='checkbox' data-url="http://localhost:3000/trainingsdaten.geojson" value='')
                label.form-check-label(for='flexCheckChecked')
                  | Trainingspolygone
                .form-check
                input#model.form-check-input(type='checkbox' value='')
                label.form-check-label(for='flexCheckChecked')
                  | Modell
              p.mt-3
                button#download.btn.btn-primary Herunterladen





  script.
    // Set active Button
    document.querySelectorAll(".active")[0].classList.remove("active")
    document.querySelectorAll(".nav-link")[2].classList.add("active")


  script(src="https://unpkg.com/georaster") 
  script(src="https://unpkg.com/georaster-layer-for-leaflet") 
  script(src='/javascripts/leaflet.js')
  script(src='/javascripts/result.js')
  scrpt(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript")
  script(src="https://cdn.jsdelivr.net/npm/jszip")
  script(src='/javascripts/download.js')


