    link(rel='stylesheet' href='https://unpkg.com/leaflet@1.9.2/dist/leaflet.css' integrity='sha256-sA+zWATbFveLLNqWO2gtiw3HL/lh1giY/Inf1BJ0z14=' crossorigin='')
    script(src='https://unpkg.com/leaflet@1.9.2/dist/leaflet.js' integrity='sha256-o9N1jGDZrf5tS+Ft4gbIK7mYMipq9lqpVJ91xHSyKhg=' crossorigin='')
    link(rel='stylesheet' href='/stylesheets/leaflet.css')

    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')

    //leaflet-draw
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js")


    // Favicon
    // link(rel='icon' type='image/x-icon' href='/images/muenster-icon.png')
    link(rel='icon' sizes='16x16 32x32 48x48 64x64' href='/images/Apollo_64_Kreis.ico')

  body.d-flex.flex-column.min-vh-100
    // Responsive navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container.px-4.m-1
        img.col-sm-2.float-end(src= "/images/IconDonkey.svg")
        a.navbar-brand(href='/') Apollo13 

        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
            // span.icon
              svg(width="128px" height="128px")
                use(xlink:href="/images/IconDonkey.svg#DonkeyIcon")
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            li.nav-item
              a.nav-link(href='/upload') Upload
            li.nav-item
              a.nav-link(href='/result') Result


    // Page Content
    .container.mt-5
      block content

    // Footer
    footer.py-5.bg-dark.mt-auto
      .container.px-4.px-lg-5
        p.m-0.text-center.text-white Copyright &copy; Apollo 13 Projekt 2023
        img.col-sm-2.float-end(src= "/images/spaceylogo.png")

    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')