  body.d-flex.flex-column.min-vh-100
    // Responsive navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container.px-5
        a.navbar-brand(href='/') 
          img.img-fluid.rounded.me-1.d-inline-block.align-text-top(src="/images/IconDonkey.svg" width="50" height="50") 
        a.navbar-brand(href='/') Apollo 13  
        #countdown(style="color: white; font-size: 23px;")
          b Countdown:
          span#hours
          span#minutes 
          span#seconds
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') 
                img.img-fluid.rounded.me-1.d-inline-block.align-text-center(src="/images/IconDonkey.svg" width="30" height="30")
                text  Home
            li.nav-item
              a.nav-link(href='/upload')
                img.img-fluid.rounded.me-1.d-inline-block.align-text-center(src="/images/IconUpload.svg" width="30" height="30")
                text  Upload
            li.nav-item
              a.nav-link(href='/result') 
                img.img-fluid.rounded.me-1.d-inline-block.align-text-center(src="/images/IconResultBlau.svg" width="30" height="30")
                text  Result
            li.nav-item
              a.nav-link(href='/demo')   
                img.img-fluid.rounded.me-1.d-inline-block.align-text-center(src="/images/IconDemo.svg" width="30" height="30")
                text  Demo                
    // Page Content
    .container
      block content

    // Footer


    footer.bg-dark.text-center.text-muted.text-lg-start.mt-5

      .container.m-3.px-2
        .row
          .col-sm
            h5.text-uppercase Links
            ul.list-unstyled.mb-0
              li
                a.link1.text-muted.text-decoration-none(href='/impressum') Impressum
              li
                a.link1.text-muted.text-decoration-none(href='/team') Team

          .col-sm
            img.logo.sm.m-2(src='/images/spaceylogo.png')
          .col-sm
