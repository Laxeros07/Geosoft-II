extends layout

block content


  .card.gy-4.gx-lg-2.m-4
    .card-header

      ul.nav.nav-tabs.card-header-tabs(data-bs-tabs='tabs')
        li.nav-item
          a#ergebnisTab.nav-link(href='/result') Ergebnis
        li.nav-item
          a#trainingsdatenTab.nav-link.active(href='/result/bearbeiten') Trainingsdaten bearbeiten                     

    .card-body

      #bearbeiten.tab-pane
        block bearbeiten

      #result.tab-pane
        block result

  script.
    // Set active Button
    document.querySelectorAll(".active")[0].classList.remove("active")
    document.querySelectorAll(".nav-link")[2].classList.add("active")


  script(src="https://unpkg.com/georaster") 
  script(src="https://unpkg.com/georaster-layer-for-leaflet") 
  script(src='/javascripts/tabs.js')
  scrpt(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript")
  script(src="https://cdn.jsdelivr.net/npm/jszip")
