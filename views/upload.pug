extends layout

block content

    .container
        .row.justify-content-md-center
            .col-lg-6.col-xs-12.mb-3
                .card.text-dark.shadow.p-4
                    h1 Trainingsdaten
                    form(method='' action='')
                        form-group
                            label.col-form-label(for='trainingsdaten') Trainingsdaten laden
                            div
                            input.form-control(type='file' name="trainingsdaten" accept=".json, .geojson, .gpck")
                        button.btn.btn-primary.mb-2(type='submit') Hochladen


            .col-lg-6.col-xs-12.mb-3
                .card.text-dark.shadow.p-4
                    h1 RSkript
                    form(method='post' action='')
                        form-group
                            select.form-control(name='select' value=selected) Skript auswählen
                                option(value='flaeche') Fläche berechnen
                                //option(value='max') max(1,2,3)
                        form-group
                            label.col-form-label(for='radius') Radius
                            div
                                input.form-control(type='number' name='radius' value=radius)
                        button.btn.btn-primary.mb-2(type='submit') Skript ausführen
                    label(for='ergebnis') Ergebnis
                    textarea.from-control(name = 'ergebnis')=data

    script.
        // Set active Button
        document.querySelectorAll(".active")[0].classList.remove("active");
        document.querySelectorAll(".nav-link")[1].classList.add("active");