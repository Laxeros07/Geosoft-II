                  th Beschreibung
                  th Klassen_Identifikation
                tr
                  td test 1
                  td test Klasse 1
                tr
                  td test 1
                  td test Klasse 1
                tr
                  td test 1
                  td test Klasse 1
      
  script.
    // Set active Button
    document.getElementById("ergebnisTab").classList.remove("active")
    document.getElementById("trainingsdatenTab").classList.add("active")

