extends tabs

block bearbeiten

  .row.gy-4.gx-lg-2.justify-content-md-center.mt-2 
    .col-lg-8.col-sm-12.mb-3
      .card.shadow.p-4.h-100
        #map
    .col-lg-4.col-sm-12.mb-3

      .row.gy-4.gx-lg-2
        .col-lg-12.col-sm-4.flex-xs-row.gx-1.d-grid.gap-1
          .card.shadow.p-2
            .card-body
              text Algorithmus auswählen: 
              a.btn.btn-primary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
                text Random Forest
              ul.dropdown-menu
                li
                  a.dropdown-item(href='#') Descicion Tree
                li
                  a.dropdown-item(href='#') Another action
              
              form(method='post' action='result')
                  form-group
                      #baeume
                          label.col-form-label(for="anzahl")
                              |Anzahl der Bäume für random forest: 
                          input.form-control(name="anzahl" type="number" min="0" max="1000" step="1")
                          label.col-form-label(for="tiefe")
                              |Tiefe der Bäume für random forest: 
                          input.form-control(name="tiefe" type="number" min="0" max="1000" step="1")
            
              a.btn.btn-primary(type='submit')(method='post' action='result')
                img.img-fluid.rounded.mb-lg-0.d-inline-block.align-text-center(src="/images/IconPlayGruen.svg" width="30" height="30")
                text     Skript ausführen
          .card.shadow.p-2
            .card-body
              a.btn.btn-primary(onclick='geojsonExport()')(method='post' action='result') 
                img.img-fluid.rounded.mb-lg-0.d-inline-block.align-text-center(src="/images/IconDownloadGruen.svg" width="30" height="30")
                text     Dateien herunterladen
